<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootRL"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/angry">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_countforward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="99dp"
        android:id="@+id/button_visit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_countback"
        android:id="@+id/button_together"
        android:layout_above="@+id/button_visit"
        android:layout_alignLeft="@+id/button_visit"
        android:layout_alignStart="@+id/button_visit"
        android:layout_marginBottom="181dp"
        android:layout_alignRight="@+id/button_visit"
        android:layout_alignEnd="@+id/button_visit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_map"
        android:id="@+id/button_map"
        android:layout_alignBottom="@+id/button_together"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

</RelativeLayout>